<?xml version="1.0" encoding="UTF-8"?>
<ui>
    <interface id="dataplicity">
        <mastertabcontainer title="${device.name}" id="top-tabs">
            <tab title="Settings">
    		<graph title="CPU Process"
        	     sampler="network"
        	     min="20"
        	     max="80"
        	     xunit="Time" yunit="CPU (process %)" />
		<text>TYPES: 5 - None, 15 - wLan0, 25 - Eth0</text>
		<form button="Update" title="Network parameters">
                    <textedit title="Network Type"
                        source="device.settings.smartdesk.connection.code"
                        destination="device.settings.smartdesk.connection.code" type="float" />
                </form>
		<text>This is the path from Home page to Radio</text>	
 		<form button="Update" title="Initial Music Radio path">
                    <textedit title="Option"
                        source="device.settings.smartdesk.music.option"
                        destination="device.settings.smartdesk.music.option" type="string" />
	            <textedit title="Addon"
                        source="device.settings.smartdesk.music.addon"
                        destination="device.settings.smartdesk.music.addon" type="string" />
		    <textedit title="Category"
                        source="device.settings.smartdesk.music.category"
                        destination="device.settings.smartdesk.music.category" type="string" />
		</form>
		<text>Set the music station to play based on your mood</text>
		<text>To stop the music "Uncheck All" and click "Play Music"</text>
		<form button="Play Music" title="Music Relax">
		    
		    <checkbox title="Relax" 
		    	value="device.settings.smartdesk.music-relax.activate" 
		    	destination="device.settings.smartdesk.music-relax.activate" on="yes" off="no" />
		    <textedit title="Volume"
                        source="device.settings.smartdesk.music-relax.volume"
                        destination="device.settings.smartdesk.music-relax.volume" type="float" />
		    <textedit title="Type"
                        source="device.settings.smartdesk.music-relax.type"
                        destination="device.settings.smartdesk.music-relax.type" type="string" />
                    <textedit title="Station"
                        source="device.settings.smartdesk.music-relax.station"
                        destination="device.settings.smartdesk.music-relax.station" type="string" />
		    
		    <checkbox title="Happy" 
		    	value="device.settings.smartdesk.music-relax.activate" 
		    	destination="device.settings.smartdesk.music-happy.activate" on="yes" off="no" />
                    <textedit title="Volume"
                        source="device.settings.smartdesk.music-happy.volume"
                        destination="device.settings.smartdesk.music-happy.volume" type="float" />
                    <textedit title="Type"
                        source="device.settings.smartdesk.music-happy.type"
                        destination="device.settings.smartdesk.music-happy.type" type="string" />
                    <textedit title="Station"
                        source="device.settings.smartdesk.music-happy.station"
                        destination="device.settings.smartdesk.music-happy.station" type="string" />
                        
                    <checkbox title="Sad" 
		    	value="device.settings.smartdesk.music-sad.activate" 
		    	destination="device.settings.smartdesk.music-sad.activate" on="yes" off="no" />
                    <textedit title="Volume"
                        source="device.settings.smartdesk.music-sad.volume"
                        destination="device.settings.smartdesk.music-sad.volume" type="float" />
                    <textedit title="Type"
                        source="device.settings.smartdesk.music-sad.type"
                        destination="device.settings.smartdesk.music-sad.type" type="string" />
                    <textedit title="Station"
                        source="device.settings.smartdesk.music-sad.station"
                        destination="device.settings.smartdesk.music-sad.station" type="string" />
                
                    <checkbox title="Annoyed" 
		    	value="device.settings.smartdesk.music-annoyed.activate" 
		    	destination="device.settings.smartdesk.music-annoyed.activate" on="yes" off="no" />
                    <textedit title="Volume"
                        source="device.settings.smartdesk.music-annoyed.volume"
                        destination="device.settings.smartdesk.music-annoyed.volume" type="float" />
                    <textedit title="Type"
                        source="device.settings.smartdesk.music-annoyed.type"
                        destination="device.settings.smartdesk.music-annoyed.type" type="string" />
                    <textedit title="Station"
                        source="device.settings.smartdesk.music-annoyed.station"
                        destination="device.settings.smartdesk.music-annoyed.station" type="string" />
                
                    <checkbox title="Regional" 
		    	value="device.settings.smartdesk.music-regional.activate" 
		    	destination="device.settings.smartdesk.music-regional.activate" on="yes" off="no" />
                    <textedit title="Volume"
                        source="device.settings.smartdesk.music-regional.volume"
                        destination="device.settings.smartdesk.music-regional.volume" type="float" />
                    <textedit title="Type"
                        source="device.settings.smartdesk.music-regional.type"
                        destination="device.settings.smartdesk.music-regional.type" type="string" />
                    <textedit title="Station"
                        source="device.settings.smartdesk.music-regional.station"
                        destination="device.settings.smartdesk.music-regional.station" type="string" />
                </form>
	    </tab>
	</mastertabcontainer>
    </interface>
</ui>
